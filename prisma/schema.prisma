generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}


model Highlight {
  id            Int       @id @default(autoincrement())
  page          Int?      
  text          String      
  book          Book      @relation(fields: [bookId], references: [id])
  bookId        Int       
}

model Book {
  id          Int         @id @default(autoincrement())
  title       String      @unique
  highlight   Highlight[]
}